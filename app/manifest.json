{
  "manifest_version": 2,

  "name": "Fukurou",
  "description": "Fukurou Stuff",
  "version": "0.0.3",

  "background": {
    "scripts": [ "js/background.js" ]
  },
  "options_page": "options.html",
  "permissions": [
    "https://api.twitch.tv/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}